#!/bin/bash

declare SCP_OPTION=""
declare OTTO_SERVER="10.178.97.152"
declare ELSA_SERVER="10.177.223.57"
declare COCKPIT_BOARD="fd53:7cb8:383:3::73"

if [ -z $1 ]
then
    echo 'usage: myScp [file or dir]'
    exit -1
elif [ -d "$1" ] ; then
    SCP_OPTION="-r";
else
    if [ -f "$1" ]; then
        SCP_OPTION="";
    else
        echo "$1 is not valid";
        exit -1
    fi
fi

echo "==========================================="
echo "what is the target to send?"
echo
echo "1.otto_server  2.elsa_server  3.cockpit_board"
read -p "you selected : " TARGET_SERVER

echo
echo "==========================================="
echo "Enter target directory you want to send"
echo "(prefix: /home/hyuk.myeong/ for server)"
read -p "target path: " TARGET_PATH

if [ "$TARGET_SERVER" -eq 1 ]; then

    echo "copy to the $TARGET_PATH"
    sshpass -p 1234 scp $SCP_OPTION $1 hyuk.myeong@$OTTO_SERVER:/home/hyuk.myeong/$TARGET_PATH

elif [ "$TARGET_SERVER" -eq 2 ]; then

    echo "copy to the $TARGET_PATH"
    sshpass -p 1234 scp $SCP_OPTION $1 hyuk.myeong@$ELSA_SERVER:/home/hyuk.myeong/$TARGET_PATH

elif [ "$TARGET_SERVER" -eq 3 ]; then

    echo "copy to the $TARGET_PATH"
    sshpass -p Rkdckd1023ghdWl2020Qkrtjdakstp scp $SCP_OPTION $1 root@[$COCKPIT_BOARD]:$TARGET_PATH

else

    echo "do nothing"

fi
